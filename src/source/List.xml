<?xml version='1.0' encoding='utf-8'?>
<component
    name='ml_List'
    extends='mv_BaseView'>
  <interface>
    <field
        id='content'
        type='node'
        value='invalid' />

    <field
        id='isScrolling'
        type='boolean' />

    <field
        id='width'
        type='float'
        value='1920' />
    <field
        id='height'
        type='float'
        value='1080' />
    <!-- indicates what to set a row to when it's considered hidden (hidden|partial) -->
    <field
        id='rowHidingMode'
        value='hidden'
        type='string' />


    <field
        id='animateToRow'
        type='integer'
        value='0' />
    <field
        id='focusedRowIndex'
        type='integer' />
    <field
        id='focusedCellIndex'
        type='integer' />
    <field
        id='focusedRowPercent'
        type='float' />

    <field
        id='focusedCellPercent'
        type='float' />

    <field
        id='nextFocusIndex'
        type='array' />

    <!-- screen and selection state -->
    <field
        id='cellEvents'
        type='node' />
    <field
        id='rowEvents'
        type='node' />
    <!-- <field
        id='viewPortEvents'
        type='array' /> -->

    <field
        id='rowFocused'
        type='integer' />
    <field
        id='itemFocused'
        type='integer' />
    <field
        id='itemUnfocused'
        type='integer' />
    <field
        id='itemSelected'
        type='integer' />
    <field
        id='currFocusItemIndex'
        type='integer' />
    <field
        id='_focusedRenderer'
        type='node' />
    <field
        id='isHidden'
        type='boolean' />

    <function name='getRowScreenRect' />
    <function name='getCellRenderer' />
    <function name='getCellScreenRect' />

  </interface>
  <children>

  </children>

</component>