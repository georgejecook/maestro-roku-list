  function createFocusSettings(animSpeed = 0.03, fastAnimSpeed = 0.01, animStyle = "fixed")
    settings = createObject("roSGNode", "ml_FocusSettings")
    settings.update({
      animSpeed: animSpeed
      fastAnimSpeed: fastAnimSpeed
      animStyle: animStyle
    })
    return settings

  end function
