<?xml version='1.0' encoding='utf-8'?>

<component
    name='Cell'
    extends='Group'>

  <!-- Note that target and rect are both set during the interpolation -->
  <interface>
    <field
        id='index'
        type='int' />
    <field
        id='content'
        type='node' />
    <field
        id='listEvent'
        type='assocarray' />
    <field
        id='size'
        type='array' />
    <field
        id='initialState'
        type='assocarray' />
  </interface>


  <children>
    <Poster
        id='poster'
        translation='[0,0]'
        scaleRotateCenter='[0, 320]'
        loadingBitmapUri='http://via.placeholder.com/370x300'
        failedBitmapUri='http://via.placeholder.com/370x300'
        uri='http://via.placeholder.com/370x300'
        loadWidth='480'
        loadHeight='320'
        width='480'
        height='320'
        loadDisplayMode='scaleToFit' />
    <Rectangle
        opacity='0.4'
        color='#000000'
        width='480'
        height='70' />
    <Poster
        id='poster2'
        translation='[420,10]'
        loadWidth='50'
        loadHeight='50'
        width='50'
        height='50'
        loadDisplayMode='scaleToFit' />
    <Label
        id='label'
        width='460'
        horizAlign='center'
        translation='[10, 10]' />

    <Label
        id='label2'
        text='Summary text in here'
        wrap='true'
        maxLines='2'
        width='460'
        color='#000000'
        translation='[10, 320]' />

  </children>

</component>