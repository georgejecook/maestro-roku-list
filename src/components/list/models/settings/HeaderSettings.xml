<?xml version='1.0' encoding='utf-8'?>
<component
    name='ml_HeaderSettings'
    extends='Node'>
  <interface>
    <field
        id='compName'
        type='string'
        value='ml_RowHeader' />
    <!-- onTop|underneath|none -->
    <field
        id='position'
        value='onTop'
        type='string' />
    <field
        id='height'
        type='integer'
        value='50' />
    <field
        id='labelOffset'
        type='array'
        value='[0,0]' />
    <field
        id='fontKey'
        value='mediumBold,30'
        type='string' />
    <field
        id='textColor'
        value='#ffffff'
        type='string' />
    <field
        id='backgroundColor'
        value='#000000'
        type='string' />
    <field
        id='backgroundOpacity'
        value='0.8'
        type='string' />

    <field
        id='backgroundVisible'
        value='false'
        type='boolean' />

    <!-- use this to get exact control over the label -->
    <field
        id='labelSettings'
        type='assocarray' />

  </interface>
</component>