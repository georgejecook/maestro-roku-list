<?xml version='1.0' encoding='utf-8'?>
<component
    name='ml_RowContent'
    extends='ContentNode'>

  <interface>
    <field
        id='trackingId'
        type='string' />
    <field
        id='index'
        type='integer' />

    <!-- instance of RowSettings -->
    <field
        id='settings'
        type='node' />
    <field
        id='isHidden'
        type='boolean'
        value='false' />
    <field
        id='isFocusEnabled'
        type='boolean'
        value='true' />
    <!-- instance of GroupedRowContent, if this row is part of a grid, or 
    some other virtual concept of many rows mapped to one row -->
    <field
        id='group'
        type='node' />
    <field
        id='groupIndex'
        type='integer' />

  </interface>

</component>