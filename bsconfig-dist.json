{
  "rootDir": "src",
  "files": [
    "manifest",
    "source/**/*.*",
    "components/**/*.*",
    "!**/*.spec.*"
  ],
  "autoImportComponentScript": true,
  "createPackage": false,
  "stagingFolderPath": "dist",
  "diagnosticFilters": [
    {
      "src": "**/roku_modules/**/*.*"
    }
  ],
  "emitDefinitions": true,
  "plugins": [
    "maestro-roku-bsc-plugin"
  ],
  "maestro": {
    "excludeFilters": ["**/roku_modules/**/*", "**/rooibos/**/*"],
    "buildForIDE": false
  },
  "sourceMap": true
}