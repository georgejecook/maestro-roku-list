{
  "name": "maestro-roku-ioc-sample",
  "version": "0.1.0",
  "description": "Fast, flexible list example, extracted from maestro framework",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "dependencies": {
    "brighterscript": "file:../../vsc/brighterscript",
    "log": "file:../../roku-log/roku-log",
    "mc": "file:../maestro-roku-core",
    "mioc": "file:../maestro-roku-ioc",
    "mv": "file:../maestro-roku-view",
    "mx": "file:../maestro-roku-mvvm"
  },
  "files": [
    "dist/**/!(manifest)*",
    "!roku_modules"
  ],
  "devDependencies": {
    "chalk": "^4.1.0",
    "fs-extra": "^9.0.1",
    "ropm": "^0.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/georgejecook/roku-ioc.git"
  },
  "keywords": [
    "ropm",
    "brightscript",
    "mvvm",
    "framework",
    "fun"
  ],
  "author": "George Cook",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/georgejecook/roku-ioc/issues"
  },
  "ts-node": {
    "transpileOnly": true,
    "compileOptions": {
      "incremental": true,
      "allowJs": false
    }
  },
  "ropm": {
    "rootDir": "src",
    "packageRootDir": "dist"
  },
  "scripts": {
    "build": "node scripts/run.js",
    "build-test": "node scripts/run-test.js"
  }
}
