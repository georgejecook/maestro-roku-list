{
    "name": "maestro-roku-list",
    "version": "0.1.0",
    "description": "Fast, flexible list example, extracted from maestro framework",
    "main": "index.js",
    "directories": {
        "doc": "docs"
    },
    "dependencies": {
        "log": "/home/george/hope/open-source/maestro/roku-log",
        "mc": "/home/george/hope/open-source/maestro/maestro-roku-core",
        "mioc": "/home/george/hope/open-source/maestro/maestro-roku-ioc",
        "mv": "/home/george/hope/open-source/maestro/maestro-roku-view"
    },
    "files": [
        "dist/**/!(manifest)*",
        "!roku_modules"
    ],
    "devDependencies": {
        "brighterscript": "file:../../vsc/brighterscript",
        "fs-extra": "^7.0.1",
        "maestro-roku-bsc-plugin": "file:../maestro-roku-bsc-plugin",
        "rimraf": "^3.0.2",
        "rooibos-roku": "file:../../rooibos/bsc-plugin",
        "yargs": "^16.2.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/georgejecook/roku-ioc.git"
    },
    "keywords": [
        "ropm",
        "brightscript",
        "mvvm",
        "framework",
        "fun"
    ],
    "author": "George Cook",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/georgejecook/roku-ioc/issues"
    },
    "ts-node": {
        "transpileOnly": true,
        "compileOptions": {
            "incremental": true,
            "allowJs": false
        }
    },
    "ropm": {
        "rootDir": "src",
        "packageRootDir": "dist"
    },
    "scripts": {
        "local": "ts-node scripts/install-maestro-local.js",
        "remote": "ts-node scripts/install-maestro-npm.js",
        "build": "node scripts/run.js && ts-node scripts/move-generated-files.js",
        "build-remote": "npm run remote && npm run build",
        "build-local": "npm run local && npm run build",
        "build-app": "node scripts/run-app.js",
        "build-test": "node scripts/run-test.js",
        "rc": "ropm copy && ts-node scripts/fix-ropm-issues.js"
    }
}
